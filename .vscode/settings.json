{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=88",
        "--preview",
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    "isort.check": true
}